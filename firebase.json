{
  "hosting": {
    "public": "build",
    "headers": [
      { "source":"/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}] }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
      
    ],
    "rewrites": [
      {
          "source": "/r/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "/api/**",
          "function": "api"
        }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "firestore": {
      "port": "5002"
    }
  }
}