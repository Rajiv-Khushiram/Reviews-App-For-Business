{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
      
    ],
    "rewrites": [
      {
          "source": "/r/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "/api/**",
          "function": "api"
        }
    ]
  }
}